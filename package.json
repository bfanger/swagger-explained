{
  "name": "svelte-project-template",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "lint": "concurrently --kill-others-on-fail \"yarn:lint:*\"",
    "lint:prettier": "prettier --check --loglevel=warn \"src/**/*.svelte\"",
    "lint:svelte-check": "svelte-check --fail-on-warnings --fail-on-hints",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext=js,ts --max-warnings=0 src",
    "format": "prettier --write . && eslint --fix --ext=.js,.ts src",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0 --ext ts --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --no-ignore"
    ],
    "*.svelte": [
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "git-directory-deploy": "^1.5.1",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.1",
    "prettier": "~2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "sass": "^1.42.1",
    "svelte": "^3.43.1",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.5",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "typescript": "^4.4.3",
    "vite": "^2.5.10"
  },
  "dependencies": {
    "marked": "^4.0.10",
    "yaml": "^1.10.2"
  },
  "jest": {
    "transform": {
      "\\.ts$": [
        "ts-jest"
      ]
    }
  }
}
